{
  "manifest_version": 2,

  "name": "AI Text Observer",

  "version": "1.0",

  "permissions": ["storage"],

  "web_accessible_resources": [
    "content.js",
    "constants.js"
  ],

  "background": {
    "page": "background.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content-bridge.js"
      ]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "browser_action": {
    "default_title": "AI Model Observer"
  }

}
