{
  "manifest_version": 2,

  "name": "AI Text Observer",

  "version": "1.0",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },

  "permissions": ["storage"],

  "web_accessible_resources": [
    "content.js",
    "constants.js"
  ],

  "background": {
    "page": "background.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content-bridge.js"
      ]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "browser_action": {
    "default_title": "AI Model Observer",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  }

}
