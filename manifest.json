{
  "manifest_version": 2,

  "name": "AI Text Observer",

  "version": "1.0",

  "permissions": ["storage"],

  "browser_action": {
    "default_title": "AI Model Observer"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["models.js", "background.js"],
    "persistent": true
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }

}
